#!/bin/bash

# compares the first model with the second and a combined model

set -o errexit

first=$1
second=$2

if [[ "$first" == "" ]] || [[ "$second" == "" ]]; then
  echo "Command needs two arguments: names of models to be compared"
fi

prefix="test_$(date +%s)"
first_eval="${prefix}_${first}"
second_eval="${prefix}_${second}"
combined_eval="${prefix}_${first}_${second}"

bin/split $first $first_eval

echo
echo "=========================================================================================="
echo " Merging '$first' and '$second' into combined model '$combined_eval' ..."
echo "=========================================================================================="
echo

bin/run model merge -I $second_eval $second
bin/run model merge -I --omit-test-data $combined_eval $first_eval $second_eval

bin/train $first_eval
bin/eval $first_eval

cp -r EXparser/Dataset/$first_eval/{TEST_LYT,TEST_REFS,TEST_SEG} EXparser/Dataset/$second_eval
bin/train $second_eval
bin/eval $second_eval

cp -r EXparser/Dataset/$first_eval/{TEST_LYT,TEST_REFS,TEST_SEG} EXparser/Dataset/$combined_eval
bin/train $combined_eval
bin/eval $combined_eval

# save data to csv
bin/run report $first_eval $second_eval $combined_eval -o "${prefix}.csv"
echo "A comparison of the accuracy of the models has been written to ${prefix}.csv"
